container_commands:
  01_makemigrations:
    command: "source /var/app/venv/*/bin/activate ; python manage.py makemigrations"
    leader_only: true
  02_migrate:
    command: "source /var/app/venv/*/bin/activate ; python manage.py migrate"
    leader_only: true
  03_compilemessages:
    command: "source /var/app/venv/*/bin/activate ; python manage.py compilemessages"
option_settings:  
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings